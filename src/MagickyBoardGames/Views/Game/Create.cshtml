@model MagickyBoardGames.ViewModels.GameSaveViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <div>
            <h4 style="display: inline-block">Game</h4>
            <a asp-action="Search" data-toggle="tooltip" title="Import Data" class="fa fa-download fa-2x" style="display: inline-block"></a>
        </div>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserId"/>
        <div class="form-group">
            <label asp-for="Game.Name" class="col-md-2 control-label"></label>
            <div class="list-inline col-md-9">
                <input asp-for="Game.Name" class="form-control"/>
                <span asp-validation-for="Game.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Game.Description" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <textarea asp-for="Game.Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Game.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Game.PlayerRange" class="col-md-2 control-label"></label>
            <div class="col-md-1">
                <input asp-for="Game.MinPlayers" class="form-control"/>
                <span asp-validation-for="Game.MinPlayers" class="text-danger"></span>
            </div>
            <div class="col-md-1 text-center">-</div>
            <div class="col-md-1">
                <input asp-for="Game.MaxPlayers" class="form-control"/>
                <span asp-validation-for="Game.MaxPlayers" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryIds" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <select asp-for="CategoryIds" class="form-control" multiple="multiple" asp-items="@(new SelectList(Model.AvailableCategories, "Id", "Description"))"></select>
            </div>
            <span asp-validation-for="CategoryIds" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OwnerIds" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <select asp-for="OwnerIds" class="form-control" multiple="multiple" asp-items="@(new SelectList(Model.AvailableOwners, "Id", "Name"))"></select>
            </div>
            <span asp-validation-for="OwnerIds" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RatingId" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <select asp-for="RatingId" class="form-control" asp-items="@(new SelectList(Model.AvailableRatings, "Id", "ShortDescription"))"></select>
            </div>
            <span asp-validation-for="RatingId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-9">
                <input type="submit" value="Create" class="btn btn-success"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
