@model MagickyBoardGames.ViewModels.GameViewViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Game</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Game.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Game.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Game.PlayerRange)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Game.PlayerRange)
        </dd>
    </dl>
    
    <h4>Categories</h4>
    <table class="table">
        <tbody>
            @foreach (var item in Model.Categories) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h4>Owners</h4>
    <table class="table">
        <tbody>
        @foreach (var item in Model.Owners) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
        </tbody>
    </table>
    <h4>Player Ratings</h4>
    <table class="table">
        <tbody>
            @foreach (var item in Model.PlayerRatings) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlayerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
