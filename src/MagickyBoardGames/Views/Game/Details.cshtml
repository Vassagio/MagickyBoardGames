@model MagickyBoardGames.ViewModels.GameViewViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Game.Image)
        </dt>
        <dd>
            <a href="@Model.Game.Image">
                <img src="@Model.Game.Thumbnail" />
            </a>
        </dd>        
        <dt>
            @Html.DisplayNameFor(model => model.Game.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Game.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Game.PlayerRange)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Game.PlayerRange)
        </dd>
    </dl>    
</div>
<h4>Categories</h4>
<table class="table">
    <tbody>
        @foreach (var item in Model.Categories) {
            <tr>
                <td>
                    <a asp-controller="Category" asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Description)
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h4>Owners</h4>
<table class="table">
    <tbody>
        @foreach (var item in Model.Owners) {
            <tr>
                <td>
                    <a asp-controller="Player" asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h4>Player Ratings</h4>
<table class="table">
    <tbody>
        @foreach (var item in Model.PlayerRatings) {
            <tr>
                <td width="200px">
                    <a asp-controller="Player" asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.PlayerName)
                    </a>
                </td>
                <td>
                    <a asp-controller="Rating" asp-action="Details" asp-route-id="@item.Rating.Id">
                        @Html.DisplayFor(modelItem => item.Rating.Rate)
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Game.Id" data-toggle="tooltip" title="Edit" class="fa fa-pencil fa-2x"></a> |
    <a asp-action="Index">Back to List</a>
</div>
