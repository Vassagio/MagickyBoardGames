@model MagickyBoardGames.ViewModels.ImportSearchViewModel

<form asp-action="Search">
    <div class="input-group">
        <input asp-for="Query" class="form-control" placeholder="Search"/>
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </div>
    </div>
</form>
<table class="table">
    @foreach (var item in Model.BoardGames) {
        <tr>
            <td class="col-md-2">
                <h4>
                    <a asp-action="Create" asp-route-id="@item.GameId" data-toggle="tooltip" title="Import" class="fa fa-upload" style="color: green"></a>

                    <b>
                        @Html.DisplayFor(modelItem => item.Name)
                    </b>
                </h4>
            </td>
            <td rowspan="2" align="center" valign="middle">
                <img src="@item.Thumbnail" class="img-thumbnail" />
            </td>
        </tr>
        <tr>
            <td class="col-md-10" height="99%">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
    }
</table>
<footer class="footer">
    <div class="container">
        <ul class="pager">
            <li><a asp-action="Index">Back to Create</a></li>
        </ul>
    </div>
</footer>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
