@model MagickyBoardGames.ViewModels.RatingListViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Ratings</h2>

<table class="table">
    <thead>
        <tr>           
            <th>
                Rate
            </th>            
            <th>
                Short Description
            </th>
            <th class="visible-md visible-lg">
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ratings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>         
            <td class="visible-md visible-lg">
                @Html.DisplayFor(modelItem => item.LongDescription)
            </td>         
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="fa fa-info"></a>             
            </td>
        </tr>
}
    </tbody>
</table>
